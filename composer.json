{
    "name": "xchacha-demo/xchacha20",
    "description": "Educational XChaCha20 stream cipher implementation in PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Mann",
            "email": "eric@eamann.com"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "ext-sodium": "*"
    },
    "autoload": {
        "psr-4": {
            "XChaChaDemo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XChaChaDemo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "coverage": "phpunit --coverage-text",
        "coverage-html": "phpunit --coverage-html html"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 